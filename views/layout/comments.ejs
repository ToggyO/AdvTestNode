<% if (items.length) { %>
  <ul>
    <% } %>

    <% items.forEach(function(item){ %>
        <li id="<%= item.id %>">

          <div class="head">
            <!-- Получение Логина пользователя для заголовка комментария через  поле owner модели User в модели Comments-->
            <a href="/users/<%= item.owner.login %>">
              <%= item.owner.login %>
            </a>

            <!-- Отображение времени существования коментария от момента его создания -->
            <span class="date">
              <%= moment(item.createdAt).fromNow(); %>
            </span>
          </div>

          <%= item.body %>
            <span class="link reply">ответить</span>

            <%- include('./comments.ejs', {items: item.children}) %>
        </li>
    <% }) %>

    <% if (items.length) { %>
  </ul>
<% } %>
